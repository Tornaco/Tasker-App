<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.tornaco.tasker.app">

    <application
        android:name="dev.tornaco.tasker.TaskerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PackageModulesViewerActivity" />

        <service android:name=".service.PackageObserveService" />
        <service android:name=".service.InstrumentationLauncherService" />

        <activity
            android:name="dev.tornaco.tasker.NavigatorActivity"
            android:label="@string/title_activity_navigator"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>